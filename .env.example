# Naikoria Tech Academy - Environment Variables Template
# Copy this file to .env and update with your actual values

# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://tutoring_user:tutoring_pass@localhost:5432/tutoring_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AWS S3 Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# FastAPI AI Service Configuration
FASTAPI_SERVICE_URL=http://localhost:8001
DJANGO_SERVICE_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
REACT_APP_DJANGO_API_URL=http://localhost:8000/api/v1
REACT_APP_FASTAPI_API_URL=http://localhost:8001
REACT_APP_WS_URL=ws://localhost:8001/ws

AWS_STORAGE_BUCKET_NAME=naikoria-storage
AWS_S3_REGION_NAME=us-east-1

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Payment Gateways
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# AI Integration
OPENAI_API_KEY=your-openai-api-key

# WhatsApp/SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WebRTC/Video Conferencing
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn